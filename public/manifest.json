{
  "name": "image-sticker",
  "description": "An extension to put images on web pages like stickers",
  "version": "0.0.0",
  "manifest_version": 2,
  "permissions": [],
  "browser_action": {
    "default_popup": "default_popup.html",
    "default_icon": {
      "128": "default_icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "128": "default_icon.png"
  }
}
